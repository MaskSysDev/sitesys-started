echo "🚀 Pre commit Started..."

echo "⌛ Typecheck..."

pnpm typecheck

echo "⌛ Formatting..."

# Check for formatting issues
if ! pnpm format; then
  echo "Formatting issues found. Please format your code before committing."
  exit 1
fi

echo "⌛ Check for lint errors..."

# Check for linting errors
if ! pnpm lint; then
  echo "Linting errors found. Please fix them before committing."
  exit 1
fi

echo "⌛ Check for lint errors..."

# Check for linting errors
if ! pnpm check; then
  echo "Errors were found during verification. Please correct them before committing."
  exit 1
fi

echo "⌛ App Build..."

pnpm build

echo "⌛ Add Stage..."

git add .

echo "✔️  Pre commit Done"
